#!/usr/bin/env php
<?php

require __DIR__ . '/../vendor/autoload.php';

use CliCsvReader\Command\ImportProductsCommand;
use Symfony\Component\Console\Application;

$app = new Application('Product CSV Importer', '1.0.0');

$app->add(new ImportProductsCommand());

try {
    $app->run();
} catch (Throwable $e) {
    echo 'There was an error running the import command: ' . $e->getMessage() . "\n";
}
